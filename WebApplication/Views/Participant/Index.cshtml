@model IEnumerable<WebApplication.Models.Participant>

@{
    ViewBag.Title = "Participant";
}

<h2>@ViewBag.Title Dashboard</h2>

<p>
    @Html.ActionLink("Assign", "Create", null, new { @class = "btn btn-primary" })
</p>

@if (Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Lane)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Child.Firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event.Gender)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Lane)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Child.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.Gender)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ParticipantId }, new { @class = "btn btn-warning" }) 
                    @Html.ActionLink("Details", "Details", new { id = item.ParticipantId }, new { @class = "btn btn-info" }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.ParticipantId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
}
else
{
    <p>No participant can be found, assign a perticipant to event.</p>
}
